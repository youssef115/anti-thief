<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anti-Thief Setup"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configure your tracking settings"
            android:textSize="14sp"
            android:alpha="0.7"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Server URL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Backend Server URL"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/serverUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="http://192.168.1.100:8080/"
            android:inputType="textUri"
            android:layout_marginBottom="16dp"/>

        <!-- Sender Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender Gmail Address"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/senderEmailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="your-sender@gmail.com"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp"/>

        <!-- Email App Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gmail App Password"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate at: myaccount.google.com/apppasswords"
            android:textSize="12sp"
            android:alpha="0.6"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/emailPassInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="xxxx xxxx xxxx xxxx"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp"/>

        <!-- Target Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receive Alerts At"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/targetEmailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="your-receiver@gmail.com"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp"/>

        <!-- ZIP Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZIP File Password"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Used to encrypt photo attachments"
            android:textSize="12sp"
            android:alpha="0.6"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/zipPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a strong password"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp"/>

        <!-- AES Encryption Key -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AES Encryption Key"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encrypts data sent to server (MITM protection)"
            android:textSize="12sp"
            android:alpha="0.6"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/aesKeyInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Paste or generate key"
                android:inputType="textVisiblePassword"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/generateKeyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate"
                android:textAllCaps="false"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy this key to your backend server!"
            android:textSize="12sp"
            android:textColor="#FF5722"
            android:layout_marginBottom="16dp"/>

        <!-- API Key -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API Key"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Authentication key for backend API requests"
            android:textSize="12sp"
            android:alpha="0.6"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/apiKeyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your API key"
            android:inputType="textVisiblePassword"
            android:textSize="12sp"
            android:layout_marginBottom="32dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Configuration"
            android:textAllCaps="false"/>

    </LinearLayout>
</ScrollView>
